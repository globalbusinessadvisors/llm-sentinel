{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## ğŸ“š Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": ["maintenance", "refactor", "chore"]
    },
    {
      "title": "## ğŸ”’ Security",
      "labels": ["security"]
    },
    {
      "title": "## âš¡ Performance",
      "labels": ["performance"]
    },
    {
      "title": "## ğŸ“¦ Dependencies",
      "labels": ["dependencies"]
    },
    {
      "title": "## ğŸ”„ CI/CD",
      "labels": ["ci", "cd", "github-actions"]
    }
  ],
  "ignore_labels": ["ignore-for-release", "wontfix", "duplicate", "invalid"],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n**Full Changelog**: ${{RELEASE_DIFF}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}}) @${{AUTHOR}}",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)(\\(.+\\))?!?:",
      "target": "feature"
    },
    {
      "pattern": "^(fix|bugfix)(\\(.+\\))?!?:",
      "target": "bug"
    },
    {
      "pattern": "^docs(\\(.+\\))?!?:",
      "target": "documentation"
    },
    {
      "pattern": "^(chore|refactor|style)(\\(.+\\))?!?:",
      "target": "maintenance"
    },
    {
      "pattern": "^perf(\\(.+\\))?!?:",
      "target": "performance"
    },
    {
      "pattern": "^deps(\\(.+\\))?!?:",
      "target": "dependencies"
    },
    {
      "pattern": "^ci(\\(.+\\))?!?:",
      "target": "ci"
    },
    {
      "pattern": "^security(\\(.+\\))?!?:",
      "target": "security"
    }
  ]
}
